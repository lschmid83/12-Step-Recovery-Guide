<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RecoveryMeetingFinder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="navigationBottomColor">@color/white_alpha_80</item>
        <item name="navigationBottomSelectedColor">@color/blue_alpha_80</item>
        <item name="drawableTint">@color/white_alpha_60</item>
        <item name="shareButtonColor">@color/dark_grey</item>
        <item name="md_content_color">@color/white</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="actionButtonColor">@color/dark_blue</item>
        <item name="actionButtonIconColor">@color/white</item>
        <item name="android:textColorHint">#666666</item>
    </style>
    <style name="Theme.Meetings" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="navigationBottomColor">@color/white_alpha_80</item>
        <item name="navigationBottomSelectedColor">@color/blue_alpha_80</item>
        <item name="drawableTint">@color/black_alpha_60</item>
        <item name="shareButtonColor">@color/dark_grey</item>
        <item name="md_content_color">@color/white</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="actionButtonColor">@color/dark_blue</item>
        <item name="actionButtonIconColor">@color/white</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>
    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/buttonBarPositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/black</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>
    <style name="buttonBarPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>